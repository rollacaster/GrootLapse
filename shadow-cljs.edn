;; shadow-cljs configuration
{:source-paths
 ["src"]

 :dependencies
 [[reagent "0.10.0"]]

 :dev-http {8080 "public"}

 :builds
 {:app
  {:target :browser
   :asset-path "js"
   :modules {:main {:init-fn grootlapse.core/init}}}
  :raspi
  {:target :node-script
   :main grootlapse.raspberrypi.core/init
   :output-to "out/grootlapse/raspberrypi/grootlapse-pi.js"
   :devtools {:before-load-async grootlapse.raspberrypi.core/stop
              :after-load grootlapse.raspberrypi.core/start}}}}
